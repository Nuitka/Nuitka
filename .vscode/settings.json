{
    "files.trimTrailingWhitespace": true,
    "files.trimFinalNewlines": true,
    "C_Cpp.dimInactiveRegions": false,
    "files.exclude": {
        "**/*.build": true,
        "**/*.dist" : true,
        "**/*.exe": true,
        "**/*.exe.away": true,
        "**/*.bin": true,
        "**/*.pyc": true,
        "**/__pycache__": true,
        "**/*.orig": true,
        "**/*.tmp": true,
        "tests/reflected/nuitka": true,
        "tests/distutils/venv_*": true,
        "build" : true,
    },
    "files.associations": {
        "*.scons": "python",
        "*.h": "c",
        "*.c": "c",
    },
    "python.linting.pylintArgs": ["--disable=I0011,I0012,no-init,bad-whitespace,C0330,E1103,W0632,W1504,C0123,C0411,C0413,R0204,similar-code,cyclic-import,duplicate-code,deprecated-module,assignment-from-none",
        "--method-rgx=[a-z_][a-zA-Z0-9_]{2,40}$",
        "--module-rgx=.*",
        "--function-rgx=.*",
        "--variable-rgx=.*",
        "--argument-rgx=.*",
        "--dummy-variables-rgx=_.*|trace_collection",
        "--notes=",
        "--const-rgx=.*",
        "--max-line-length=125",
        "--no-docstring-rgx=.*",
        "--max-module-lines=5000",
        "--min-public-methods=0",
        "--max-public-methods=100",
        "--max-args=11",
        "--max-parents=12",
        "--max-statements=50",
        "--max-nested-blocks=10",
        "--max-bool-expr=10",
        "--ignored-argument-names=_.*|trace_collection",
        "--disable=no-else-return",
        "--disable=c-extension-no-member,inconsistent-return-statements",
        "--disable=useless-object-inheritance,useless-return,assignment-from-no-return",
        "--disable=import-outside-toplevel",
    ],
    "python.linting.ignorePatterns" : ["tests/CPython??/test/**", "tests/syntax/**"],
    "restructuredtext.confPath": "",
    "python.formatting.provider": "black",
}
